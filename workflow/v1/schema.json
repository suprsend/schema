{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.suprsend.com/workflow/v1/schema.json",
  "title": "Workflow Schema v1",
  "description": "Workflow Schema v1",
  "$comment": "Workflow Schema v1",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "format": "uri",
      "default": "https://schema.suprsend.com/workflow/v1/schema.json"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 255,
      "description": "Workflow name"
    },
    "description": {
      "type": [
        "string",
        "null"
      ],
      "maxLength": 500,
      "description": "Workflow description"
    },
    "category": {
      "type": "string",
      "minLength": 1,
      "maxLength": 128,
      "pattern": "^[a-z0-9-_]+$",
      "description": "Preference category slug"
    },
    "trigger_type": {
      "type": "string",
      "enum": [
        "event",
        "api"
      ],
      "description": "trigger type"
    },
    "trigger_events": {
      "type": [
        "array",
        "null"
      ],
      "description": "Array of event names that can trigger this workflow",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 255
      },
      "minItems": 1,
      "maxItems": 10
    },
    "tags": {
      "type": [
        "array",
        "null"
      ],
      "description": "optional tags for workflow",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 128
      },
      "maxItems": 25
    },
    "ratelimit": {
      "type": [
        "object",
        "null"
      ],
      "description": "ratelimit for a workflow/recipient. [count=2 in window=30d]",
      "properties": {
        "count": {
          "type": "integer",
          "minimum": 1
        },
        "sliding_window": {
          "$ref": "https://schema.suprsend.com/workflow/v1/fragment_schema.json#/$definitions/static_duration_format"
        }
      },
      "required": [
        "count",
        "sliding_window"
      ],
      "additionalProperties": false
    },
    "conditions": {
      "type": [
        "array",
        "null"
      ],
      "description": "trigger workflow only if these conditions satisfy",
      "items": {
        "$ref": "https://schema.suprsend.com/workflow/v1/fragment_schema.json#/$definitions/condition_expr_v1_def"
      }
    },
    "override_recipients_type": {
      "type": "string",
      "enum": [
        null,
        "user",
        "single_object_fields"
      ],
      "description": "override recipients using trigger payload. (applicable only if trigger_type=event)"
    },
    "override_recipients_user_expr": {
      "type": [
        "string",
        "null"
      ],
      "description": "a jq-expression to evaluate new recipients of type user (if override_recipients_type=user)",
      "minLength": 2,
      "maxLength": 2048
    },
    "override_recipients_single_object_fields_expr": {
      "type": "object",
      "description": "overrides original recipient with an object. object-type and id are evaluated using jq-expr (if override_recipients_type=single_object_fields)",
      "properties": {
        "object_type": {
          "type": "string",
          "description": "a jq-expression to evaluate object_type",
          "minLength": 2,
          "maxLength": 2048
        },
        "id": {
          "type": "string",
          "description": "a jq-expression to evaluate object_id",
          "minLength": 2,
          "maxLength": 2048
        },
        "$object_subscriptions_query.depth": {
          "type": [
            "string",
            "null"
          ],
          "description": "a jq-expression to evaluate subscriptions_query.depth",
          "minLength": 1,
          "maxLength": 2048
        }
      },
      "required": [
        "object_type",
        "id"
      ],
      "additionalProperties": false
    },
    "override_actor_user_expr": {
      "type": [
        "string",
        "null"
      ],
      "description": "a jq-expression to evaluate actor. (applicable only if trigger_type=event)",
      "minLength": 2,
      "maxLength": 2048
    },
    "override_tenant_expr": {
      "type": [
        "string",
        "null"
      ],
      "description": "a jq-expression to evaluate tenant. (applicable only if trigger_type=event)",
      "minLength": 2,
      "maxLength": 2048
    },
    "tree": {
      "type": "object",
      "properties": {
        "nodes": {
          "type": "array",
          "description": "Array of nodes in the workflow",
          "items": {
            "$ref": "https://schema.suprsend.com/workflow/v1/tree_schema.json#/$definitions/node_def"
          },
          "minItems": 1,
          "maxItems": 25
        }
      },
      "required": [
        "nodes"
      ],
      "additionalProperties": false
    }
  },
  "required": [
    "name",
    "category",
    "trigger_type",
    "tree"
  ],
  "additionalProperties": true,
  "allOf": [
    {
      "if": {
        "properties": {
          "trigger_type": {
            "const": "event"
          }
        }
      },
      "then": {
        "required": [
          "trigger_events"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "override_recipients_type": {
            "const": "user"
          }
        }
      },
      "then": {
        "required": [
          "override_recipients_user_expr"
        ]
      }
    },
    {
      "if": {
        "properties": {
          "override_recipients_type": {
            "const": "single_object_fields"
          }
        }
      },
      "then": {
        "required": [
          "override_recipients_single_object_fields_expr"
        ]
      }
    }
  ],
  "comment": "TODO: override fields only applicable if trigger_type=event"
}
