{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.suprsend.com/workflow/v1/node_branch_schema.json",
  "title": "Workflow Node generic branch",
  "description": "Workflow Node generic branch",
  "$comment": "Workflow Node generic branch",
  "$definitions": {
    "generic_branches": {
      "type": "array",
      "minItems": 2,
      "maxItems": 10,
      "items": [
        {
          "$ref": "#/$definitions/generic_condition_branch"
        },
        {
          "$ref": "#/$definitions/generic_default_branch"
        }
      ]
    },
    "generic_condition_branch": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "is_default": {
          "type": "boolean",
          "const": false
        },
        "conditions": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "https://schema.suprsend.com/workflow/v1/fragment_schema.json#/$definitions/condition_expr_v1_def"
          }
        },
        "nodes": {
          "type": "array",
          "description": "nodes inside the branch",
          "items": {
            "$ref": "https://schema.suprsend.com/workflow/v1/tree_schema.json#/$definitions/node_def"
          }
        }
      },
      "required": [
        "conditions"
      ],
      "additionalProperties": false
    },
    "generic_default_branch": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "is_default": {
          "type": "boolean",
          "const": true
        },
        "conditions": {
          "type": "array",
          "minItems": 1,
          "maxItems": 1,
          "items": {
            "$ref": "https://schema.suprsend.com/workflow/v1/fragment_schema.json#/$definitions/condition_expr_v1_def"
          }
        },
        "nodes": {
          "type": "array",
          "description": "nodes inside the branch",
          "items": {
            "$ref": "https://schema.suprsend.com/workflow/v1/tree_schema.json#/$definitions/node_def"
          }
        }
      },
      "required": [
        "conditions"
      ],
      "additionalProperties": false
    },
    "temp_branch": {
      "type": "array",
      "minItems": 2,
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "is_default": {
            "type": "boolean"
          },
          "conditions": {
            "type": "array",
            "items": {
              "required": [
                "type"
              ],
              "if": {
                "properties": {
                  "type": {
                    "const": "future_event"
                  }
                }
              },
              "then": {
                "$ref": "https://schema.suprsend.com/workflow/v1/fragment_schema.json#/$definitions/future_events_condition_def"
              },
              "else": {
                "if": {
                  "properties": {
                    "type": {
                      "const": "delay"
                    }
                  }
                },
                "then": {
                  "$ref": "https://schema.suprsend.com/workflow/v1/fragment_schema.json#/$definitions/delay_condition_def"
                },
                "else": {
                  "if": {
                    "properties": {
                      "type": {
                        "const": "expression_v1"
                      }
                    }
                  },
                  "then": {
                    "$ref": "https://schema.suprsend.com/workflow/v1/fragment_schema.json#/$definitions/condition_expr_v1_def"
                  }
                }
              }
            }
          },
          "nodes": {
            "type": "array",
            "description": "nodes inside the branch",
            "items": {
              "$ref": "https://schema.suprsend.com/workflow/v1/tree_schema.json#/$definitions/node_def"
            }
          }
        },
        "required": [
          "conditions"
        ],
        "additionalProperties": false
      }
    }
  }
}