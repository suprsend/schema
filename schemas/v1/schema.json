{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.suprsend.com/schemas/v1/schema.json",
  "title": "SchemaDefinitionV1",
  "description": "Schema Definition to validate payload",
  "type": "object",
  "properties": {
    "slug": {
      "description": "slug for the schema. typically lowercase with underscores.",
      "type": "string",
      "pattern": "^[a-z0-9_-]+$",
      "minLength": 1
    },
    "name": {
      "description": "Schema name",
      "type": "string",
      "minLength": 0,
      "maxLength": 128
    },
    "description": {
      "description": "description for schema",
      "type": "string"
    },
    "status": {
      "description": "status for schema, read only",
      "type": [
        "string",
        "null"
      ],
      "enum": [
        "draft",
        "committed",
        "live"
      ],
      "readOnly": true
    },
    "hash": {
      "description": "hash for schema, read only",
      "type": ["string", "null"],
      "maxLength": 256,
      "readOnly": true
    },
    "version_no": {
      "description": "schema version number, read only",
      "type": [
        "integer",
        "null"
      ],
      "minimum": 1,
      "readOnly": true
    },
    "json_schema": {
      "description": "Draft2020-12 json schema without external links",
      "type": [
        "object",
        "null"
      ],
      "minProperties": 1
    }
  },
  "required": [
    "slug"
  ],
  "additionalProperties": true
}
