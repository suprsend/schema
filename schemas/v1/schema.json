{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schema.suprsend.com/schemas/v1/schema.json",
  "title": "SchemaDefinitionV1",
  "description": "Schema Definition to validate payload",
  "type": "object",
  "properties": {
    "slug": {
      "description": "slug for the schema. Typically lowercase with underscores.",
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "minLength": 1
    },
    "name": {
      "description": "Schema name",
      "type": "string",
      "minLength": 0,
      "maxLength": 128
    },
    "description": {
      "description": "A brief explanation of the schema's purpose.",
      "type": [
        "string",
        "null"
      ]
    },
    "status": {
      "description": "status for schema, read only",
      "type": "string",
      "enum": [
        "draft",
        "committed",
        "live"
      ]
    },
    "hash": {
      "description": "hash for schema, read only",
      "type": "string",
      "maxLength": 256
    },
    "json_schema": {
      "description": "Draft 2020-12 json schema without external links",
      "type": "object",
      "minProperties": 1
    }
  },
  "required": [
    "slug"
  ]
}
